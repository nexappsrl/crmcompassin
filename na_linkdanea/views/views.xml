<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="na_linkdanea.list_stats_base_search" model="ir.ui.view">
            <field name="name">Search in Stats</field>
            <field name="model">na_linkdanea.stats_base</field>
            <field name="arch" type="xml">
                <search>
                    <field name="numero_doc" string="Seriale Fattura EasyFatt" />
                    <field name="totale_fatturato" string="Totale fattura" />
                    <field name="data_fattura" string="Data in Fattura" />
                    <field name="vat" string="PIVA" />
                    <field name="nome_prodotto" />
                    <field name="codice_prodotto" />
                    <field name="qta" />
                    <field name="imponibile" />
                    <field name="categoria" />
                    <field name="sottocategoria" />
                    <field name="larghezza" />
                    <field name="altezza" />
                    <field name="write_date" string="Ultimo Aggiornamento" />
                    <filter name="filter_data_fattura" string="Data Fattura" domain="[]" context="{'group_by': 'data_fattura'}" />
                    <filter name="filter_vat" string="PIVA" context="{'group_by': 'vat'}" domain="[]" />
                    <filter name="filter_nome_prodotto" string="Nome Prodotto" context="{'group_by': 'nome_prodotto'}" domain="[]" />
                    <filter name="filter_codice_prodotto" string="Codice Prodotto" context="{'group_by': 'codice_prodotto'}" domain="[]" />
                    <filter name="filter_categoria" string="Categoria" context="{'group_by': 'categoria'}" domain="[]" />
                    <filter name="filter_sottocategoria" string="Sottocategoria" context="{'group_by': 'sottocategoria'}" domain="[]" />
                    <filter name="filter_larghezza" string="Larghezza" context="{'group_by': 'larghezza'}" domain="[]" />
                    <filter name="filter_altezza" string="Altezza" context="{'group_by': 'altezza'}" domain="[]" />
                </search>
            </field>
        </record>



        <record id="na_linkdanea.list_stats_base" model="ir.ui.view">
            <field name="name">Statistiche da Danea</field>
            <field name="model">na_linkdanea.stats_base</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="numero_doc" string="Seriale Fattura EasyFatt" />
                    <field name="totale_fatturato" string="Totale fattura" />
                    <field name="data_fattura" string="Data in Fattura" />
                    <field name="vat" string="PIVA" />
                    <field name="nome_prodotto" />
                    <field name="codice_prodotto" />
                    <field name="qta" />
                    <field name="imponibile" />
                    <field name="categoria" />
                    <field name="sottocategoria" />
                    <field name="larghezza" />
                    <field name="altezza" />
                    <field name="write_date" string="Ultimo Aggiornamento" />
                </tree>
            </field>
        </record>

        

        <record model="ir.actions.act_window" id="na_linkdanea.action_window_data_base_stats">
            <field name="name">Statistiche Easyfatt</field>
            <field name="res_model">na_linkdanea.stats_base</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
        <!-- PRODUCT VIEW -->

        <record model="ir.ui.view" id="product_template_kanban_linkdanea_view">
            <field name="name">Product Template Kanban Stock</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view" />
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="inside">
                    <field name="na_linkdanea_category" />
                    <field name="na_linkdanea_subcategory" />
                </xpath>
                <xpath expr="//div[@name='product_lst_price']" position="after">
                    <div t-if="record.type.raw_value == 'product'">
                        Dimensioni:
                        <field name="na_linkdanea_width" />
                        W x
                        <field name="na_linkdanea_height" />
                        H
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_form_linkdanea_view">
            <field name="name">product.product.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view" />
            <field name="arch" type="xml">
                <xpath expr="//search/group/filter[@name='categ_id']" position="after">                    
                    <filter name="na_linkdanea_category" context="{'group_by':'na_linkdanea_category'}" />
                    <filter name="na_linkdanea_subcategory" context="{'group_by':'na_linkdanea_subcategory'}" />
                    <filter name="na_linkdanea_width" context="{'group_by':'na_linkdanea_width'}" />
                    <filter name="na_linkdanea_height" context="{'group_by':'na_linkdanea_height'}" />


                </xpath>
            </field>
        </record>


        <record id="product_tree_linkdanea_view" model="ir.ui.view">
            <field name="name">product.template.product.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <field name="uom_id" position="after">
                    <field name="na_linkdanea_category" />
                    <field name="na_linkdanea_subcategory" />
                    <field name="na_linkdanea_width" />
                    <field name="na_linkdanea_height" />
                </field>
            </field>
        </record>


    </data>
</odoo>